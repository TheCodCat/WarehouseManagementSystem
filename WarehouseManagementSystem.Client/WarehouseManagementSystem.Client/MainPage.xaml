<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:converts="clr-namespace:WarehouseManagementSystem.Client.Converts"
             xmlns:m="clr-namespace:UraniumUI.Icons.MaterialSymbols;assembly=UraniumUI.Icons.MaterialSymbols"
             xmlns:components="clr-namespace:WarehouseManagementSystem.Client.Components"
             x:Class="WarehouseManagementSystem.Client.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <VerticalStackLayout Grid.Row="0" Margin="10">
            <material:AutoCompleteTextField Title="Найти по названию"
        ItemsSource="{Binding ProductMaui,Converter={converts:ProductToAutoConvert}}"
        Icon="{FontImageSource FontFamily=MaterialSharp, Glyph={x:Static m:MaterialSharp.Search}}"
        SelectedText="{Binding SelectedSearch}">
            </material:AutoCompleteTextField>
        </VerticalStackLayout>

        <components:ShipmentBoard Grid.Row="1"/>
    </Grid>

</ContentPage>
